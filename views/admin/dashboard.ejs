<% layout('/layouts/boilerplate') -%>
<link rel="stylesheet" href="/stylesheet/dashboard.css">



        <%- include('../partials/adminsidebar') %>

        <!-- Main Content -->
        <div class="main-content flex-grow-1">
            <!-- Search Bar -->
            <div class="mb-4">
                <input type="search" class="form-control search-bar" placeholder="Search here...">
            </div>

            <!-- Metrics Row -->
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="card metric-card">
                        <h3>$5k</h3>
                        <div class="text-secondary">Total Sales</div>
                        <small class="text-success">+10% from yesterday</small>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card metric-card">
                        <h3>500</h3>
                        <div class="text-secondary">Total Order</div>
                        <small class="text-success">+8% from yesterday</small>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card metric-card">
                        <h3>9</h3>
                        <div class="text-secondary">Product Sold</div>
                        <small class="text-danger">-2% from yesterday</small>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card metric-card">
                        <h3>12</h3>
                        <div class="text-secondary">New Customer</div>
                        <small class="text-success">+3% from yesterday</small>
                    </div>
                </div>
            </div>

            <!-- Charts Row -->
            <div class="row mb-4">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Top Products</h5>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Name</th>
                                        <th>Popularity</th>
                                        <th>Sales</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>01</td>
                                        <td>Home Decore Range</td>
                                        <td>
                                            <div class="progress">
                                                <div class="progress-bar bg-warning" style="width: 78%"></div>
                                            </div>
                                        </td>
                                        <td>78%</td>
                                    </tr>
                                    <tr>
                                        <td>02</td>
                                        <td>Disney Princess Dress</td>
                                        <td>
                                            <div class="progress">
                                                <div class="progress-bar bg-info" style="width: 62%"></div>
                                            </div>
                                        </td>
                                        <td>62%</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Level</h5>
                            <canvas id="levelChart" class="chart-container"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Bottom Charts Row -->
            <div class="row">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Customer Fulfillment</h5>
                            <canvas id="fulfillmentChart" class="chart-container"></canvas>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Visitor Insights</h5>
                            <canvas id="visitorChart" class="chart-container"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="/javascript/dashboard.js"></script>
