<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Client Profile | EditEdge</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <style>
        /* Dark theme */
        body {
            background-color: #121212;
            color: #fff;
            font-family: 'Poppins', sans-serif;
        }

        /* Navbar */
        .navbar {
            background: rgba(20, 20, 20, 0.8);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .navbar-brand {
            font-weight: bold;
            color: #FF007F;
        }

        .navbar-nav .nav-link {
            color: #fff;
        }

        .navbar-nav .nav-link:hover {
            color: #FF007F;
        }

        /* Glassmorphism Cards */
        .card {
            background: rgba(30, 30, 30, 0.8);
            backdrop-filter: blur(12px);
            border-radius: 12px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            
            color: #fff;
        }

        .card-body {
            padding: 20px;
        }

        .profile-img {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid #FF007F;
        }

        /* Buttons */
        .btn-primary {
            background-color: #FF007F;
            border: none;
            transition: 0.3s;
        }

        .btn-primary:hover {
            background-color: #e6006e;
        }

        .btn-secondary {
            background-color: #333;
            border: 1px solid #FF007F;
            transition: 0.3s;
        }

        .btn-secondary:hover {
            background-color: #444;
        }

        .btn-success {
            background-color: #ffffff;
            color: #101010;
            border: none;
        }

        .list-group-item {
            background: transparent;
            border: none;
            color: #fff;
        }

        h5, h6 {
            color: #FF007F;
        }

        /* Footer */
        .footer {
            text-align: center;
            padding: 20px;
            color: rgba(255, 255, 255, 0.6);
            margin-top: 40px;
            font-size: 14px;
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand" href="/admin/clients">EditEdge CRM</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/admin/dashboard">Dashboard</a></li>
                    <li class="nav-item"><a class="nav-link" href="/admin/clients">Clients</a></li>
                    <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-5">
        <div class="row">
            <!-- Left Profile Section -->
            <div class="col-md-4">
                <div class="card text-center p-3  border border-danger">
                   
                    <h4 class="mt-3"><%= client.name %></h4>
                    <p class="text-muted"><%= client.company || 'No Company' %></p>
                    
                    <button class="btn btn-secondary mt-2">Message</button>
                </div>

                <!-- Contact Info -->
                <div class="card mt-3">
                    <div class="card-body">
                        <h5>Contact Info</h5>
                        <ul class="list-group">
                            <li class="list-group-item"><strong>Email:</strong> <%= client.email %></li>
                            <li class="list-group-item"><strong>Phone:</strong> <%= client.phone %></li>
                            <li class="list-group-item"><strong>Status:</strong> <%= client.status %></li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Right Details Section -->
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <h5>Project Details</h5>
                        <% if (client.projectDetails.length > 0) { %>
                            <% client.projectDetails.forEach(project => { %>
                                <div class="card mb-3">
                                    <div class="card-body">
                                        <h6><strong>Service:</strong> <%= project.serviceCategory %></h6>
                                        <p><strong>Plan:</strong> <%= project.plan %></p>
                                        <p><strong>Bundle:</strong> <%= project.bundle ? 'Yes' : 'No' %></p>
                                        <p><strong>File Format:</strong> <%= project.fileFormat %></p>
                                        <p><strong>Deadline:</strong> <%= project.deadline.toISOString().split('T')[0] %></p>
                                        <p><strong>Review Date:</strong> <%= project.reviewDate %></p>

                                        <h6>Brand Guidelines</h6>
                                        <ul>
                                            <li><strong>Brand Colors:</strong> <%= project.brandGuidelines.brandColors %></li>
                                            <li><strong>Typography:</strong> <%= project.brandGuidelines.typography %></li>
                                            <li><strong>Moodboard:</strong> <a href="<%= project.brandGuidelines.moodboard %>"><%= project.brandGuidelines.moodboard %></a></li>
                                            <li><strong>Design Style:</strong> <%= project.brandGuidelines.designStyle %></li>
                                        </ul>
                                    </div>
                                </div>
                            <% }) %>
                        <% } else { %>
                            <p>No projects assigned.</p>
                        <% } %>
                    </div>
                </div>

                <!-- Contract Attachment -->
                <% if (client.contractAttachment) { %>
                    <div class="card mt-3">
                        <div class="card-body">
                            <h5>Contract Attachment</h5>
                            <a href="<%= client.contractAttachment %>" target="_blank" class="btn btn-success">View Contract</a>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <div class="footer">
        Â© 2025 EditEdge Multimedia. All rights reserved.
    </div>

    <script async src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
</body>
</html>
