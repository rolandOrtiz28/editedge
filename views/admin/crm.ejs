<% layout('/layouts/boilerplate') -%>
<link rel="stylesheet" href="/stylesheet/crm.css">
<div class="d-flex">
<%- include('../partials/adminsidebar') %>
        <!-- Main Content -->
        <div class="main-content flex-grow-1">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Customer Management</h2>
                <button class="btn btn-primary">Add New Customer</button>
            </div>

            <!-- Customer Stats -->
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="card customer-card">
                        <div class="card-body">
                            <h5>Total Customers</h5>
                            <h3>1,234</h3>
                            <p class="text-success mb-0">+12% this month</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card customer-card">
                        <div class="card-body">
                            <h5>Active Customers</h5>
                            <h3>892</h3>
                            <p class="text-success mb-0">+5% this month</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card customer-card">
                        <div class="card-body">
                            <h5>New Customers</h5>
                            <h3>45</h3>
                            <p class="text-success mb-0">+8% this month</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card customer-card">
                        <div class="card-body">
                            <h5>Churn Rate</h5>
                            <h3>2.4%</h3>
                            <p class="text-danger mb-0">+0.8% this month</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Customer List -->
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title mb-4">Recent Customers</h5>
                    <table class="table table-dark">
                        <thead>
                            <tr>
                                <th>Customer</th>
                                <th>Email</th>
                                <th>Orders</th>
                                <th>Spent</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>John Doe</td>
                                <td>john@example.com</td>
                                <td>12</td>
                                <td>$1,234</td>
                                <td><span class="badge bg-success">Active</span></td>
                                <td>
                                    <button class="btn btn-sm btn-primary me-2">View</button>
                                    <button class="btn btn-sm btn-danger">Delete</button>
                                </td>
                            </tr>
                            <tr>
                                <td>Jane Smith</td>
                                <td>jane@example.com</td>
                                <td>8</td>
                                <td>$945</td>
                                <td><span class="badge bg-warning">Pending</span></td>
                                <td>
                                    <button class="btn btn-sm btn-primary me-2">View</button>
                                    <button class="btn btn-sm btn-danger">Delete</button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Customer Analytics -->
            <div class="row">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Customer Growth</h5>
                            <canvas id="customerGrowthChart" class="chart-container"></canvas>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Customer Segments</h5>
                            <canvas id="customerSegmentsChart" class="chart-container"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/your-code.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="/javascript/crm.js"></script>