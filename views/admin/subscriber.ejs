<% layout('/layouts/boilerplate') -%>
<link rel="stylesheet" href="/stylesheet/cms.css">

<%- include('../partials/adminsidebar') %>

<!-- Main Content -->
<div class="main-content flex-grow-1">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Content Management</h2>
        <a href="/blogs/new" class="btn btn-primary">Add New Blog</a>
    </div>

    <!-- Content Categories -->
    <div class="row mb-4">
        <!-- Blog Posts Total -->
        <div class="col-md-3">
            <div class="card content-card">
                <div class="card-body">
                    <h5>Total Subscribers</h5>
                    <p class="mb-0"><%= subscribers.length %> posts</p> 
                </div>
            </div>
        </div>
    
    
    

    <!-- Blog List -->
    <div class="card">
        <div class="card-body">
            <h5 class="card-title mb-4">Recent Blogs</h5>
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th>Email Address</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% subscribers.forEach(subscriber => { %>
                    <tr>
                        <td><%= subscriber.email %></td>
                        <td>
                            
                            <form action="/admin/delete-subscriber?_method=DELETE" method="POST">
                                <input type="hidden" name="id" value="<%= subscriber._id %>">
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="/javascript/cms.js"></script>




