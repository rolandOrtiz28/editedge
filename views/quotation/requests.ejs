<% layout('/layouts/boilerplate') -%>
<link rel="stylesheet" href="/stylesheet/cms.css">

<%- include('../partials/adminsidebar') %>

<!-- Main Content -->
<div class="main-content flex-grow-1">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Content Management</h2>
        <a href="/blogs/new" class="btn btn-primary">Add New Blog</a>
    </div>

    <!-- Content Categories -->
    <div class="row mb-4">
        <!-- Blog Posts Total -->
        <div class="col-md-3">
            <div class="card content-card">
                <div class="card-body">
                    <h5>Total Subscribers</h5>
                    <p class="mb-0"><%= subscribers.length %> posts</p> 
                </div>
            </div>
        </div>
    
    
    

    <!-- Blog List -->
    <div class="card">
        <div class="card-body">
            <h5 class="card-title mb-4">Quotations</h5>
            <table class="table table-dark table-hover">
                <% if (quotations.length > 0) { %>
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Phone Number</th>
                        <th scope="col">Date Submitted</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                  
                        <tr>
                            <td><%= q.fullName %></td>
                            <td><%= q.emailAddress %></td>
                            <td><%= q.phoneNumber %></td>
                            <td><%= new Date(q.submissionDate).toLocaleDateString() %></td>
                            <td>
                                <a href="/quotation/requests/<%= q._id %>" class="btn btn-primary btn-sm">View Details</a>
                            </td>
                        </tr>
                  
                </tbody>
            
            </table>
            <% } else { %>
                <p>No quotation requests found.</p>
            <% } %>
        </div>
    </div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>


