<% layout('/layouts/boilerplate') -%>
<link rel="stylesheet" href="/stylesheet/cms.css">

<%- include('../partials/adminsidebar') %>
<%- include('../partials/flash') %>
<!-- Main Content -->
<div class="main-content flex-grow-1">
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card content-card">
                <div class="card-body">
                    <h5>Total Requests</h5>
                    <p class="mb-0"><%= quotations.length %> posts</p> 
                </div>
            </div>
        </div>
    </div>

    <!-- Quotations Table -->
    <div class="card">
        <div class="card-body">
            <h5 class="card-title mb-4">Quotations</h5>
            <table class="table table-dark table-hover">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Phone Number</th>
                        <th scope="col">Date Submitted</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% quotations.forEach(quotation => { %>
                        <tr>
                            <td><%= quotation.fullName %></td>
                            <td><%= quotation.emailAddress %></td>
                            <td><%= quotation.phoneNumber %></td>
                            <td><%= new Date(quotation.submissionDate).toLocaleDateString() %></td>
                            <td>
                                <div class="d-flex align-items-center gap-2">
                                    <a href="/admin/quotation/requests/<%= quotation._id %>" class="btn btn-primary btn-sm">View Details</a>
                                    <form action="/admin/delete-request?_method=DELETE" method="POST" class="m-0 p-0">
                                        <input type="hidden" name="id" value="<%= quotation._id %>">
                                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                    </form>
                                </div>
                            </td>
                            
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="/javascript/cms.js"></script>
