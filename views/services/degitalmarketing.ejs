<% layout('/layouts/boilerplate') -%>
<link rel="stylesheet" href="/stylesheet/digitalmarketing.css">

<div class="container-fluid digital-marketing-page">
 
  <div class="container-fluid graphi-design-page">
    <!-- Hero Section -->
    <div class="hero-section">
      <div class="row align-items-center">
        <!-- Left Side: Service Description -->
        <div class="col-md-6 d-flex flex-column align-items-center text-center">
          <h1 class="highlight">Transform Your Brand with <span class="glow-text ">Digital Marketing</span></h1>
          <p class="sub-text">AI-driven strategies to boost your online presence & maximize conversions.</p>
        </div>
  
        <!-- Right Side: Quotation Form -->
        <div class="col-md-5 d-flex justify-content-center">
          <div class="quote-box">
            <h2 class="quote-title">Get a Fast Quote</h2>
            <form action="/quotation/degital-marketing" method="POST" class="quote-form">
                <input type="hidden" name="serviceType" value="Degital Marketing">
  
                <div class="form-group">
                    <label for="fullName">Full Name</label>
                    <input type="text" id="fullName" name="fullName" placeholder="Enter your full name" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="emailAddress">Email Address</label>
                    <input type="email" id="emailAddress" name="emailAddress" placeholder="Enter your email" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="phoneNumber">Phone Number</label>
                    <input type="text" id="phoneNumber" name="phoneNumber" placeholder="Enter your phone number" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="projectDescription">Project Description</label>
                    <textarea id="projectDescription" name="projectDescription" placeholder="Briefly describe your project" class="form-control" rows="2" required></textarea>
                </div>
  
                <div class="form-group captcha-container">
                  <label for="captchaAnswer">(Captcha) What is <span id="num1"></span> + <span id="num2"></span>?</label>
                  <input type="text" id="captchaAnswer" name="captchaAnswer" placeholder="Enter the answer" class="form-control" required>
                  <input type="hidden" id="captchaCorrectAnswer" name="captchaCorrectAnswer">
                </div>
                <button type="submit" class="form-button">Get a Free Quote</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>




  <!-- Service Offerings -->
  <div class="service-section">
    <div class="service-card">
      <img src="/images/Seo.gif" alt="SEO Optimization">
      <h3>SEO Optimization</h3>
      <p>Boost your rankings and drive organic traffic with advanced SEO techniques.</p>
    </div>
    <div class="service-card">
      <img src="/images/Online-marketing.gif" alt="Social Media Marketing">
      <h3>Social Media Marketing</h3>
      <p>Engage with your audience and build brand awareness across all social platforms.</p>
    </div>
    <div class="service-card">
      <img src="/images/Market-Research.gif" alt="Market Research">
      <h3>Market Research</h3>
      <p>Gain valuable insights into your audience and industry for data-driven decisions.</p>
    </div>
  </div>

  <!-- Process Section -->
  <div class="process-section">
    <h2 class="process-title">Our Digital Marketing Process</h2>
    <div class="process-steps">
      <div class="process-step">
        <img src="/images/search.gif" alt="Research & Strategy">
        <h3>Research & Strategy</h3>
        <p>Understanding your audience & setting campaign goals.</p>
      </div>
      <div class="process-step">
        <img src="/images/implementation.gif" alt="Execution">
        <h3>Execution</h3>
        <p>Implementing high-impact marketing campaigns.</p>
      </div>
      <div class="process-step">
        <img src="/images/page-optimization.gif" alt="Optimization">
        <h3>Optimization</h3>
        <p>Analyzing performance & refining strategies.</p>
      </div>
    </div>
  </div>

  <!-- Call to Action -->
  <div class="cta-section">
    <h2>Let's Grow Your Business</h2>
    <p>Get a free strategy session with our experts.</p>
    <a href="/contact" class="cta-button">Book Now</a>
  </div>
</div>

<script src="/javascript/digitalmarketing.js"></script>
