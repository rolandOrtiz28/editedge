<% layout('/layouts/boilerplate') -%>
<link rel="stylesheet" href="/stylesheet/3dart.css">

<div class="container-fluid digital-art-page">
  <div class="container-fluid graphi-design-page">
    <!-- Hero Section -->
    <div class="hero-section">
      <div class="row align-items-center">
        <!-- Left Side: Service Description -->
        <div class="col-md-6 d-flex flex-column align-items-center text-center">
          <h1 class="highlight">Unleash Creativity with <span class="glow-text">3D Art</span></h1>
    <p class="sub-text">Bring your ideas to life with photorealistic models and immersive animations.</p>
        </div>
  
        <!-- Right Side: Quotation Form -->
        <div class="col-md-5 d-flex justify-content-center">
          <div class="quote-box">
            <h2 class="quote-title">Get a Fast Quote</h2>
            <form action="/quotation/3d-art" method="POST" class="quote-form">
                <input type="hidden" name="serviceType" value="3D Art">
  
                <div class="form-group">
                    <label for="fullName">Full Name</label>
                    <input type="text" id="fullName" name="fullName" placeholder="Enter your full name" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="emailAddress">Email Address</label>
                    <input type="email" id="emailAddress" name="emailAddress" placeholder="Enter your email" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="phoneNumber">Phone Number</label>
                    <input type="text" id="phoneNumber" name="phoneNumber" placeholder="Enter your phone number" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="projectDescription">Project Description</label>
                    <textarea id="projectDescription" name="projectDescription" placeholder="Briefly describe your project" class="form-control" rows="2" required></textarea>
                </div>
  
                <div class="form-group captcha-container">
                  <label for="captchaAnswer">(Captcha) What is <span id="num1"></span> + <span id="num2"></span>?</label>
                  <input type="text" id="captchaAnswer" name="captchaAnswer" placeholder="Enter the answer" class="form-control" required>
                  <input type="hidden" id="captchaCorrectAnswer" name="captchaCorrectAnswer">
                </div>
                <button type="submit" class="form-button">Get a Free Quote</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Service Offerings -->
  <div class="service-section">
    <div class="service-card">
      
      <video autoplay loop muted playsinline  loading="lazy">
        <source src="/images/3drendering.webm" type="video/webm">
      </video>
      <h3>3D Product Rendering</h3>
      <p>Realistic product visualizations for marketing and e-commerce.</p>
    </div>
    <div class="service-card">
      
      <video autoplay loop muted playsinline  loading="lazy">
        <source src="/images/Architectural.webm" type="video/webm">
      </video>
      <h3>Architectural Visualization</h3>
      <p>High-quality 3D renderings for real estate and construction projects.</p>
    </div>
    <div class="service-card">
      
      <video autoplay loop muted playsinline  loading="lazy">
        <source src="/images/Character.webm" type="video/webm">
      </video>
      <h3>Character Design & Animation</h3>
      <p>Custom character modeling for games, animation, and branding.</p>
    </div>
    <div class="service-card">
      
      <video autoplay loop muted playsinline  loading="lazy">
        <source src="/images/Motion.webm" type="video/webm">
      </video>
      <h3>Motion Graphics & VFX</h3>
      <p>Dynamic animations and 3D graphics for video production.</p>
    </div>
  </div>

  <!-- Process Section -->
  <div class="process-section">
    <h2 class="process-title">Our 3D Art Process</h2>
    <div class="process-steps">
      <div class="process-step">   
      <video autoplay loop muted playsinline  loading="lazy">
        <source src="/images/3D1.webm" type="video/webm">
      </video>
        <h3>Concept & Sketching</h3>
        <p>Defining ideas and creating sketches for the 3D project.</p>
      </div>
      <div class="process-step">    
      <video autoplay loop muted playsinline  loading="lazy">
        <source src="/images/3D2.webm" type="video/webm">
      </video>
        <h3>3D Modeling</h3>
        <p>Building detailed 3D models using industry-standard software.</p>
      </div>
     
      <div class="process-step">   
      <video autoplay loop muted playsinline  loading="lazy">
        <source src="/images/3D5.webm" type="video/webm">
      </video>
        <h3>Rendering & Animation</h3>
        <p>Finalizing visuals with high-quality rendering and animation.</p>
      </div>
    </div>
  </div>

  <!-- Video Carousel Section -->
  <div class="video-gallery-section">
    <h2 class="text-center mb-4 process-title">3D Art Examples</h2>
    <div class="video-grid">
        <video class="gallery-video" poster="/images/logo.png" preload="none" muted playsinline controls>
            <source src="https://dl.dropboxusercontent.com/scl/fi/xmpeu50kc6z48alug68wr/Keyboard.mp4?rlkey=84qie2zsysy3iqjc9m2s3eurg&st=zht3ziya&dl" type="video/mp4">
        </video>
        <video class="gallery-video" poster="/images/logo.png" preload="none" muted playsinline controls>
            <source src="https://dl.dropboxusercontent.com/scl/fi/4jq6ilo8nanvvgceagaqv/0001-0245.mp4?rlkey=9zzpltbwnjgvzph5ayuk2besq&st=xs5p4vpx&dl" type="video/mp4">
        </video>
        <video class="gallery-video" poster="/images/logo.png" preload="none" muted playsinline controls>
            <source src="https://dl.dropboxusercontent.com/scl/fi/uxp9ft14nwikedt7xga9u/white0000-0250.mp4?rlkey=sxh2osh7pfv43idvvgo7npdrv&st=tred3466&dl" type="video/mp4">
        </video>
    </div>
</div>



  <!-- Call to Action -->
  <div class="cta-section">
    <h2>Let's Bring Your Ideas to Life</h2>
    <p>Get a free consultation with our 3D artists.</p>
    <a href="/contact" class="cta-button">Contact Us</a>
  </div>
</div>

<script src="/javascript/digitalmarketing.js" defer></script>
