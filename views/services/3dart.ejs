<% layout('/layouts/boilerplate') -%>
<link rel="stylesheet" href="/stylesheet/3dart.css">

<div class="container-fluid digital-art-page">
  <!-- Hero Section -->
  <div class="hero-section">
    <h1 class="highlight">Unleash Creativity with <span class="glow-text">3D Art</span></h1>
    <p class="sub-text">Bring your ideas to life with photorealistic models and immersive animations.</p>
    <a href="/quotation" class="cta-button">Get Started</a>
  </div>

  <!-- Navigation Links -->
  <div class="video-links text-center">
    <a href="/Video-Editing" class="video-link">Video Editing</a>
    <span>|</span>
    <a href="/Graphic-Design" class="video-link">Graphic Design</a>
    <span>|</span>
    
    <a href="/Web-Development" class="video-link">Web Development</a>
    <span>|</span>
    <a href="/Degital-Marketing" class="video-link">Digital Marketing</a>
  </div>

  <!-- Service Offerings -->
  <div class="service-section">
    <div class="service-card">
      <img src="/images/3drendering.gif" alt="3D Product Rendering">
      <h3>3D Product Rendering</h3>
      <p>Realistic product visualizations for marketing and e-commerce.</p>
    </div>
    <div class="service-card">
      <img src="/images/Architectural.gif" alt="Architectural Visualization">
      <h3>Architectural Visualization</h3>
      <p>High-quality 3D renderings for real estate and construction projects.</p>
    </div>
    <div class="service-card">
      <img src="/images/Character.gif" alt="Character Design">
      <h3>Character Design & Animation</h3>
      <p>Custom character modeling for games, animation, and branding.</p>
    </div>
    <div class="service-card">
      <img src="/images/Motion.gif" alt="Motion Graphics">
      <h3>Motion Graphics & VFX</h3>
      <p>Dynamic animations and 3D graphics for video production.</p>
    </div>
  </div>

  <!-- Process Section -->
  <div class="process-section">
    <h2 class="process-title">Our 3D Art Process</h2>
    <div class="process-steps">
      <div class="process-step">
        <img src="/images/3D1.gif" alt="Concept">
        <h3>Concept & Sketching</h3>
        <p>Defining ideas and creating sketches for the 3D project.</p>
      </div>
      <div class="process-step">
        <img src="/images/3D2.gif" alt="Modeling">
        <h3>3D Modeling</h3>
        <p>Building detailed 3D models using industry-standard software.</p>
      </div>
     
      <div class="process-step">
        <img src="/images/3D5.gif" alt="Rendering">
        <h3>Rendering & Animation</h3>
        <p>Finalizing visuals with high-quality rendering and animation.</p>
      </div>
    </div>
  </div>

  <!-- Video Carousel Section -->
  <div class="video-carousel-section">
    <h2 class="text-center mb-4 process-title">3D Art Examples</h2>
    <div id="artCarousel" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <video class="carousel-video" autoplay loop muted playsinline>
            <source src="https://dl.dropboxusercontent.com/scl/fi/xmpeu50kc6z48alug68wr/Keyboard.mp4?rlkey=84qie2zsysy3iqjc9m2s3eurg&st=bmcpbz4f" type="video/mp4">
          </video>
        </div>
        <div class="carousel-item">
          <video class="carousel-video" autoplay loop muted playsinline>
            <source src="https://dl.dropboxusercontent.com/scl/fi/4jq6ilo8nanvvgceagaqv/0001-0245.mp4?rlkey=9zzpltbwnjgvzph5ayuk2besq&st=1tj2re6d" type="video/mp4">
          </video>
        </div>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#artCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#artCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
      </button>
    </div>
  </div>

  <!-- Call to Action -->
  <div class="cta-section">
    <h2>Let's Bring Your Ideas to Life</h2>
    <p>Get a free consultation with our 3D artists.</p>
    <a href="/contact" class="cta-button">Contact Us</a>
  </div>
</div>

<script src="/javascript/digitalmarketing.js"></script>
