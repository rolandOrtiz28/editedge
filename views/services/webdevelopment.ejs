<% layout('/layouts/boilerplate') -%>
<link rel="stylesheet" href="/stylesheet/webdev.css">

<div class="container-fluid web-development-page">
  <!-- Hero Section -->
  <div class="hero-section">
    <h1 class="highlight">Innovative <span class="glow-text ">Web Development</span></h1>
    <p class="sub-text">Crafting high-performance, secure, and modern websites with the latest technologies.</p>
    <a href="/quotation" class="cta-button">Get Started</a>
  </div>

  <!-- Navigation Links -->
  <div class="video-links text-center">
    <a href="/Video-Editing" class="video-link">Video Editing</a>
    <span>|</span>
    <a href="/Graphic-Design" class="video-link">Graphic Design</a>
    <span>|</span>
    <a href="/3Dart" class="video-link">3D Art</a>
  </div>

  <!-- Service Offerings -->
  <div class="service-section">
    <div class="service-card">
      <img src="/images/ResponsiveDesign.gif" alt="Responsive Design">
      <h3>Responsive Design</h3>
      <p>Seamless, adaptive layouts optimized for every screen size.</p>
    </div>
    <div class="service-card">
      <img src="/images/Ecommerce.gif" alt="E-Commerce Development">
      <h3>E-Commerce Development</h3>
      <p>Powerful and scalable online store solutions with secure payment integration.</p>
    </div>
    <div class="service-card">
      <img src="/images/WebApp.gif" alt="Web Applications">
      <h3>Custom Web Applications</h3>
      <p>Efficient, user-friendly web apps tailored for your business needs.</p>
    </div>
  </div>

  <!-- Process Section -->
  <div class="process-section">
    <h2 class="process-title">Our Web Development Process</h2>
    <div class="process-steps">
      <div class="process-step">
        <img src="/images/WD1.gif" alt="Planning">
        <h3>Planning & Strategy</h3>
        <p>Understanding business needs and outlining project goals.</p>
      </div>
      <div class="process-step">
        <img src="/images/WD2.gif" alt="Design">
        <h3>UI/UX Design</h3>
        <p>Creating intuitive and engaging user experiences.</p>
      </div>
      <div class="process-step">
        <img src="/images/WD3.gif" alt="Development">
        <h3>Development</h3>
        <p>Building responsive, secure, and high-performing websites.</p>
      </div>
      <div class="process-step">
        <img src="/images/WD4.gif" alt="Testing">
        <h3>Testing & Optimization</h3>
        <p>Ensuring quality, security, and performance before launch.</p>
      </div>
      <div class="process-step">
        <img src="/images/WD5.gif" alt="Launch">
        <h3>Deployment & Maintenance</h3>
        <p>Launching the website and providing ongoing support.</p>
      </div>
    </div>
  </div>

  <!-- Modern Card-Based Image Slider -->
  <section class="image-slider-container">
    <div class="swiper mySwiper">
      <div class="swiper-wrapper">
        <div class="swiper-slide">
          <img src="/images/Website1.png" alt="Modern Business Site">
          <div class="slide-caption">Modern Business Website</div>
        </div>
        <div class="swiper-slide">
          <img src="/images/Website2.png" alt="E-commerce Store">
          <div class="slide-caption">E-Commerce Store</div>
        </div>
        <div class="swiper-slide">
          <img src="/images/Website3.png" alt="Portfolio Website">
          <div class="slide-caption">Creative Portfolio</div>
        </div>
        <div class="swiper-slide">
          <img src="/images/Website4.png" alt="Web App">
          <div class="slide-caption">Interactive Web Application</div>
        </div>
      </div>
      <!-- Navigation Arrows -->
      <div class="swiper-button-next"></div>
      <div class="swiper-button-prev"></div>
    </div>
  </section>

  <!-- Call to Action -->
  <div class="cta-section">
    <h2>Let's Build Your Next Project</h2>
    <p>Get a free consultation and bring your vision to life.</p>
    <a href="/contact" class="cta-button">Get Started</a>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>
<script src="/javascript/webdev.js"></script>
