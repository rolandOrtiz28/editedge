<% layout('/layouts/boilerplate') -%>
<link rel="stylesheet" href="/stylesheet/graphicdesign.css">

<div class="container-fluid digital-marketing-page">
 
  <div class="container-fluid graphi-design-page">
    <!-- Hero Section -->
    <div class="hero-section">
      <div class="row align-items-center">
        <!-- Left Side: Service Description -->
        <div class="col-md-6 d-flex flex-column align-items-center text-center">
          <h1 class="highlight">Enhance Your Brand with <span class="glow-text ">Graphic Design</span></h1>
          <p class="sub-text">Creative & professional designs tailored to make your brand stand out.</p>
        </div>
  
        <!-- Right Side: Quotation Form -->
        <div class="col-md-5 d-flex justify-content-center">
          <div class="quote-box">
            <h2 class="quote-title">Get a Fast Quote</h2>
            <form action="/quotation/graphic-design" method="POST" class="quote-form">
                <input type="hidden" name="serviceType" value="Graphic Design">
  
                <div class="form-group">
                    <label for="fullName">Full Name</label>
                    <input type="text" id="fullName" name="fullName" placeholder="Enter your full name" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="emailAddress">Email Address</label>
                    <input type="email" id="emailAddress" name="emailAddress" placeholder="Enter your email" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="phoneNumber">Phone Number</label>
                    <input type="text" id="phoneNumber" name="phoneNumber" placeholder="Enter your phone number" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="projectDescription">Project Description</label>
                    <textarea id="projectDescription" name="projectDescription" placeholder="Briefly describe your project" class="form-control" rows="2" required></textarea>
                </div>
  
                <div class="form-group captcha-container">
                  <label for="captchaAnswer">(Captcha) What is <span id="num1"></span> + <span id="num2"></span>?</label>
                  <input type="text" id="captchaAnswer" name="captchaAnswer" placeholder="Enter the answer" class="form-control" required>
                  <input type="hidden" id="captchaCorrectAnswer" name="captchaCorrectAnswer">
                </div>
                <button type="submit" class="form-button">Get a Free Quote</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>


  <!-- Service Offerings -->
  <div class="service-section">
    <div class="service-card">

      <video autoplay loop muted playsinline  loading="lazy">
        <source src="/images/LogoDesign.webm" type="video/webm">
      </video>
      <h3>Logo Design</h3>
      <p>Custom logos that define your brand identity and make a lasting impression.</p>
    </div>
    <div class="service-card">
     
      <video autoplay loop muted playsinline  loading="lazy">
        <source src="/images/Campaign.webm" type="video/webm">
      </video>
      <h3>Marketing Banners</h3>
      <p>Engaging banners for websites, social media, and advertisements.</p>
    </div>
    <div class="service-card">
      
      <video autoplay loop muted playsinline  loading="lazy">
        <source src="/images/SMGraphics.webm" type="video/webm">
      </video>
      <h3>Social Media Graphics</h3>
      <p>Eye-catching visuals optimized for social media engagement.</p>
    </div>
  </div>

  <!-- Process Section -->
  <div class="process-section">
    <h2 class="process-title">Our Graphic Design Process</h2>
    <div class="process-steps">
      <div class="process-step">
       
        <video autoplay loop muted playsinline  loading="lazy">
        <source src="/images/GD1.webm" type="video/webm">
      </video>
        <h3>Concept & Brainstorming</h3>
        <p>Understanding project goals and brainstorming creative ideas.</p>
      </div>
      <div class="process-step">
      
        <video autoplay loop muted playsinline  loading="lazy">
        <source src="/images/GD2.webm" type="video/webm">
      </video>
        <h3>Sketching & Drafting</h3>
        <p>Creating initial sketches and wireframes for approval.</p>
      </div>
      <div class="process-step">
        
        <video autoplay loop muted playsinline  loading="lazy">
        <source src="/images/GD3.webm" type="video/webm">
      </video>
        <h3>Refinement & Execution</h3>
        <p>Polishing details, adding colors, typography, and final touches.</p>
      </div>
    </div>
  </div>


