<% layout('/layouts/boilerplate') -%>
<link rel="stylesheet" href="/stylesheet/graphicdesign.css">



<div class="container-fluid video-editing-page">
    <!-- Header Video -->
    <div class="video-header position-relative">
      <video autoplay muted loop>
        <source src="https://res.cloudinary.com/rolandortiz/video/upload/v1736234563/editedge/GDV_wjef7m.mp4" />
        Your browser does not support the video tag.
      </video>
      <!-- Gradient Overlay -->
      <div class="video-gradient"></div>
      <!-- Links Below Video -->
     
    </div>
    <div class="video-links  text-center">
      <a href="/videoediting" class="video-link">Video Editing</a>
      <span>|</span>
      <a href="/3dart" class="video-link">3D Art</a>
      <span>|</span>
      <a href="/WebDevelopment" class="video-link">Web Development</a>
    </div>
  <!-- Video Editing Header -->
<div class="row align-items-center mb-5 text-center text-md-start introduction">
    <!-- Left Column: Description -->
    <div class="col-md-6 d-flex flex-column align-items-center align-items-md-center text-center">
        <h1 class="text">
            <span class="letter letter-1">G</span>
            <span class="letter letter-2">R</span>
            <span class="letter letter-3">A</span>
            <span class="letter letter-4">P</span>
            <span class="letter letter-5">H</span>
            <span class="letter letter-6">I</span>
            <span class="letter letter-7">C</span>
          
            <span class="letter letter-8 space">&nbsp;</span> <!-- Space between words -->
            <span class="letter letter-9">D</span>
            <span class="letter letter-10">E</span>
            <span class="letter letter-11">S</span>
            <span class="letter letter-12">I</span>
            <span class="letter letter-13">G</span>
            <span class="letter letter-14">N</span>
     
        </h1>
        
    
        <p class="lead text-center w-75 description">
          Searching for professional graphic design services? We bring your ideas to life with stunning visuals tailored to your brand. Our process begins with understanding your goals, audience, and vision. Using industry-leading tools like Adobe Photoshop, Illustrator, and InDesign, we craft high-quality logos, banners, social media graphics, marketing materials, and more. Let us help your business stand out with creative and impactful designs that captivate your audience.
          </p>
          
    </div>
  
    <!-- Right Column: GIF -->
    <div class="col-md-6 d-flex justify-content-center image-container">
      <img src="/images/GD.png" alt="Video Editing" class="img-fluid floating-image">
    </div>
  </div>
  
  <!-- Process Section -->
<div class="process-section text-center my-5">
  <h2 class="process-title">Graphic Design Process</h2>

  <!-- Horizontal Line -->
  <div class="horizontal-line-container">
    <div class="horizontal-line"></div>
  </div>

  <div class="process-steps">
    <!-- Step 1 -->
    <div class="process-step">
      <div class="step-number">1</div>
      <div class="step-line"></div>
      <div class="step-icon">
        <img src="/images/GD1.gif" alt="Understanding">
      </div>
      <div class="podium"></div>
      <div class="step-description">Understanding project goals and brainstorming creative concepts</div>
    </div>

    <!-- Step 2 -->
    <div class="process-step">
      <div class="step-number">2</div>
      <div class="step-line"></div>
      <div class="step-icon">
        <img src="/images/GD2.gif" alt="Assembling">
      </div>
      <div class="podium"></div>
      <div class="step-description">Creating initial sketches and mockups</div>
    </div>

    <!-- Step 3 -->
    <div class="process-step">
      <div class="step-number">3</div>
      <div class="step-line"></div>
      <div class="step-icon">
        <img src="/images/GD3.gif" alt="Applying">
      </div>
      <div class="podium"></div>
      <div class="step-description">Refining designs and adding detailed elements</div>
    </div>

    <!-- Step 4 -->
    <div class="process-step">
      <div class="step-number">4</div>
      <div class="step-line"></div>
      <div class="step-icon">
        <img src="/images/GD4.gif" alt="Adding">
      </div>
      <div class="podium"></div>
      <div class="step-description">Finalizing and delivering high-resolution designs</div>
    </div>

    <!-- Step 5 -->
    <div class="process-step">
      <div class="step-number">5</div>
      <div class="step-line"></div>
      <div class="step-icon">
        <img src="/images/last.gif" alt="Review">
      </div>
      <div class="podium"></div>
      <div class="step-description">Delivering Final, High-Resolution Designs</div>
    </div>
  </div>
</div>

<!-- Image Carousel Section -->
<div class="image-carousel-section mb-5">
  <h2 class="text-center mb-4 Graphic-Example-Title">Graphic Design Examples</h2>
  <div id="graphicDesignCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="3000">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="/images/31.png" class="d-block carousel-image" alt="Design Example 1">
      </div>
      <div class="carousel-item">
        <img src="/images/32.png" class="d-block carousel-image" alt="Design Example 2">
      </div>
      <div class="carousel-item">
        <img src="/images/33.png" class="d-block carousel-image" alt="Design Example 3">
      </div>
      <div class="carousel-item">
        <img src="/images/34.png" class="d-block carousel-image" alt="Design Example 4">
      </div>
      <div class="carousel-item">
        <img src="/images/35.png" class="d-block carousel-image" alt="Design Example 5">
      </div>
    </div>
  </div>
</div>


<script src="/javascript/videoediting.js"></script>