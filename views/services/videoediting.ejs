      <div class="step-line"></div>
      <div class="step-icon">
        <img src="/images/Adding.gif" alt="Adding">
      </div>
      <div class="podium"></div>
      <div class="step-description">Adding sound design, music, and voiceovers</div>
    </div>

    <!-- Step 5 -->
    <div class="process-step">
      <div class="step-number">5</div>
      <div class="step-line"></div>
      <div class="step-icon">
        <img src="/images/Review.gif" alt="Review">
      </div>
      <div class="podium"></div>
      <div class="step-description">Final review, revisions, and export</div>
    </div>
  </div>
