<% layout('/layouts/boilerplate') -%>
<link rel="stylesheet" href="/stylesheet/videoediting.css">

<div class="container-fluid video-editing-page">
  <!-- Hero Section -->
  <div class="container-fluid web-development-page">
    <!-- Hero Section -->
    <div class="hero-section">
      <div class="row align-items-center">
        <!-- Left Side: Service Description -->
        <div class="col-md-6 d-flex flex-column align-items-center text-center">
          <h1 class="highlight">Create Stunning Videos with <span class="glow-text">Professional Editing</span></h1>
          <p class="sub-text">High-quality post-production to bring your vision to life.</p>
        </div>
  
        <!-- Right Side: Quotation Form -->
        <div class="col-md-5 d-flex justify-content-center">
          <div class="quote-box">
            <h2 class="quote-title">Get a Fast Quote</h2>
            <form action="/quotation/video-editing" method="POST" class="quote-form">
                <input type="hidden" name="serviceType" value="Web Development">
  
                <div class="form-group">
                    <label for="fullName">Full Name</label>
                    <input type="text" id="fullName" name="fullName" placeholder="Enter your full name" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="emailAddress">Email Address</label>
                    <input type="email" id="emailAddress" name="emailAddress" placeholder="Enter your email" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="phoneNumber">Phone Number</label>
                    <input type="text" id="phoneNumber" name="phoneNumber" placeholder="Enter your phone number" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="projectDescription">Project Description</label>
                    <textarea id="projectDescription" name="projectDescription" placeholder="Briefly describe your project" class="form-control" rows="2" required></textarea>
                </div>
  
                <div class="form-group captcha-container">
                  <label for="captchaAnswer">(Captcha) What is <span id="num1"></span> + <span id="num2"></span>?</label>
                  <input type="text" id="captchaAnswer" name="captchaAnswer" placeholder="Enter the answer" class="form-control" required>
                  <input type="hidden" id="captchaCorrectAnswer" name="captchaCorrectAnswer">
                </div>
                <button type="submit" class="form-button">Get a Free Quote</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  

  
<div class="service-section">
  <div class="service-card">
    <video autoplay loop muted playsinline  loading="lazy">
        <source src="/images/Corporate.webm" type="video/webm">
      </video>
    <h3>Corporate & Promotional Videos</h3>
    <p>Elevate your brand with high-impact promotional content tailored to your business.</p>
  </div>
  <div class="service-card">
    <video autoplay loop muted playsinline  loading="lazy">
        <source src="/images/sm.webm" type="video/webm">
      </video>
    <h3>Social Media Video Editing</h3>
    <p>Short-form videos optimized for Instagram, TikTok, Facebook, and YouTube.</p>
  </div>
  <div class="service-card">
    <video autoplay loop muted playsinline  loading="lazy">
        <source src="/images/youtube.webm" type="video/webm">
      </video>
    <h3>YouTube & Content Creator Editing</h3>
    <p>Engaging edits that enhance storytelling, motion graphics, and audience engagement.</p>
  </div>
  <div class="service-card"> 
    <video autoplay loop muted playsinline  loading="lazy">
        <source src="/images/Documentary.webm" type="video/webm">
      </video>
    <h3>Documentary & Short Films</h3>
    <p>Seamless post-production, color grading, and visual enhancements for storytelling projects.</p>
  </div>
  <div class="service-card">
    
    <video autoplay loop muted playsinline  loading="lazy">
        <source src="/images/logoanimation.webm" type="video/webm">
      </video>
    <h3>Logo Animation</h3>
    <p>Dynamic animated logos that enhance brand recognition and identity.</p>
  </div>
</div>


  <!-- Process Section -->
  <div class="process-section">
    <h2 class="process-title">Our Video Editing Process</h2>
    <div class="process-steps">
      <div class="process-step">
        <video autoplay loop muted playsinline  loading="lazy">
          <source src="/images/Understanding.webm" type="video/webm">
        </video>
        <h3>Understanding Goals</h3>
        <p>Aligning the vision and collecting assets for the project.</p>
      </div>
      <div class="process-step">
        <video autoplay loop muted playsinline  loading="lazy">
        <source src="/images/Apply.webm" type="video/webm">
      </video>
        <h3>Editing & Refinement</h3>
        <p>Cutting clips, applying effects, and enhancing visuals.</p>
      </div>
      <div class="process-step">
        <video autoplay loop muted playsinline  loading="lazy">
        <source src="/images/Review.webm" type="video/webm">
      </video>
        <h3>Final Export</h3>
        <p>Delivering high-quality, ready-to-use video content.</p>
      </div>
    </div>
  </div>

  <!-- Video Gallery -->
<div class="container-fluid video-gallery">
  <h2 class="text-center gallery-title">Video Show Reel</h2>

  <div class="video-container">
    <!-- Main Video Player -->
    <div class="main-video-container">
      <video id="main-video" class="main-video" controls controlsList="nodownload">
        <source src="https://dl.dropboxusercontent.com/scl/fi/qjzbwpqj1otgml7fw0dpf/FinalOutput_Ads.mp4?rlkey=rbqse96ychr0wxxhpaxy8q4is&st=fx61pf6r&dl" type="video/mp4">
        Your browser does not support the video tag.
      </video>
      <p id="video-title">01. Short-Form Video</p>
    </div>

    <!-- Video Playlist -->
    <div class="video-playlist">
      <% let videos = [
        { src: "https://dl.dropboxusercontent.com/scl/fi/1ih9w25u3s1vt603t91k5/Final_Output.mp4?rlkey=veoyc2by8ft6n3uztlqspiteb&st=ctrka73z&dl", title: "01. Show-Reel Video" },
        { src: "https://dl.dropboxusercontent.com/scl/fi/qjzbwpqj1otgml7fw0dpf/FinalOutput_Ads.mp4?rlkey=rbqse96ychr0wxxhpaxy8q4is&st=3dwaxrus&dl", title: "02. Show-Reel Video" },
        { src: "https://dl.dropboxusercontent.com/scl/fi/8knrdqhndawf4rbj7eblg/Final_wSFX.mp4?rlkey=6qvh9ozrrgzoau9ddjfmscbue&st=h6fpmsm9&dl", title: "03. Show-Reel Video" },
        { src: "https://dl.dropboxusercontent.com/scl/fi/ecoiypez3o27yopseko5o/VideoForAds_finale.mp4?rlkey=28tlt02p9gju9rulg15eu6awz&st=3d24btja&dl", title: "04. Show-Reel Video" },
        { src: "https://dl.dropboxusercontent.com/scl/fi/up7e1vc8g5ndp1h5wowoz/Final_Output_TKFXM_Project1.mp4?rlkey=fa2djfmpkofebbxsj090jxdki&st=xmomnibk", title: "05. Short-Form Video" },
        { src: "https://dl.dropboxusercontent.com/scl/fi/8y1tz61llq45vz9q3ww1n/FinalOutput_1.mp4?rlkey=3p0a5p1j4i6wa25m9g9eunsvy&st=1ugdqerr", title: "06. Short-Form Video" },
        { src: "https://dl.dropboxusercontent.com/scl/fi/b39kkdotjuqcrzswly1v8/Pocast_3D_Reels.mp4?rlkey=0qpjljy8jq5mdvedjnkdworox&st=2i07fedy", title: "07. Podcast 3D Reel" },
        { src: "https://dl.dropboxusercontent.com/scl/fi/lma0nmgsy4iemfhk9nwzj/BetMax_FinalOutput.mp4?rlkey=7ksmu19072a9s32usbmhsk8h0&st=pbx756fz", title: "08. Promo Video" },
        { src: "https://dl.dropboxusercontent.com/scl/fi/cefexqcgvjtyblybukklg/Dimo_Project_Reels_Final.mp4?rlkey=jp8mbl3kdfomzy0gnbe36lmpa&st=df5oowuv", title: "09. Promo Video" },
        { src: "https://dl.dropboxusercontent.com/scl/fi/1p2nsz1ekoas019olwc3p/FinalOutput_Alex2.mp4?rlkey=ilhwu4g5kd0h312yj3z9ypl7t&st=xbo95220", title: "10. Short-Form Video" },
        { src: "https://dl.dropboxusercontent.com/scl/fi/frsf655w9esxu69j723sv/K2x_4_FinalOutput.mp4?rlkey=f7sxylbkt8cggeo9z0f3dactb&st=tjejwxbb", title: "11. Short-Form Video" },
        { src: "https://dl.dropboxusercontent.com/scl/fi/abs7meqads00jfpwgwgc6/k2x0_1.mp4?rlkey=llbov4u4f16fzt4s8qvee287q&st=sahtebu8", title: "12. Short-Form Video" },
        { src: "https://dl.dropboxusercontent.com/scl/fi/bkpgjftiql5wyaz1509sr/tdwii_final_output.mp4?rlkey=ew3zg3iklax7eq61iuynwm2od&st=175jacr6", title: "13. Short-Form Video" },
      ]; %>

      <% videos.forEach((video, index) => { %>
        <div class="video-item" data-video="<%= video.src %>" data-title="<%= video.title %>">
          <video class="thumbnail" muted>
            <source src="<%= video.src %>" type="video/mp4">
          </video>
          <p><%= video.title %></p>
        </div>
      <% }); %>
    </div>
  </div>
</div>


  <!-- Call to Action -->
  <div class="cta-section">
    <h2>Let's Elevate Your Video Content</h2>
    <p>Work with our experts for professional video editing.</p>
    <a href="/quotation" class="cta-button">Book Now</a>
  </div>
</div>

<script src="/javascript/newvideoediting.js"></script>




