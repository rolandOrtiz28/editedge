<% layout('/layouts/boilerplate') -%>
<link rel="stylesheet" href="/stylesheet/videoediting.css">

<div class="container-fluid video-editing-page">
  <!-- Hero Section -->
  <div class="hero-section">
    <h1 class="highlight">Create Stunning Videos with <span class="glow-text">Professional Editing</span></h1>
    <p class="sub-text">High-quality post-production to bring your vision to life.</p>
    <a href="/quotation" class="cta-button">Get Started</a>
  </div>
  <div class="video-links text-center">
    
    <a href="/Graphic-Design" class="video-link">Graphic Design</a>
    <span>|</span>
    <a href="/3Dart" class="video-link">3D Art</a>
    <span>|</span>
    <a href="/Web-Development" class="video-link">Web Development</a>
    <span>|</span>
    <a href="/Digital-Marketing" class="video-link">Digital Marketing</a>
  </div>
  
<div class="service-section">
  <div class="service-card">
    <img src="/images/Corporate.gif" alt="Corporate & Promotional Videos">
    <h3>Corporate & Promotional Videos</h3>
    <p>Elevate your brand with high-impact promotional content tailored to your business.</p>
  </div>
  <div class="service-card">
    <img src="/images/sm.gif" alt="Social Media Video Editing">
    <h3>Social Media Video Editing</h3>
    <p>Short-form videos optimized for Instagram, TikTok, Facebook, and YouTube.</p>
  </div>
  <div class="service-card">
    <img src="/images/youtube.gif" alt="YouTube & Content Creator Editing">
    <h3>YouTube & Content Creator Editing</h3>
    <p>Engaging edits that enhance storytelling, motion graphics, and audience engagement.</p>
  </div>
  <div class="service-card">
    <img src="/images/Documentary.gif" alt="Documentary & Short Films">
    <h3>Documentary & Short Films</h3>
    <p>Seamless post-production, color grading, and visual enhancements for storytelling projects.</p>
  </div>
  <div class="service-card">
    <img src="/images/logoanimation.gif" alt="Logo Animation">
    <h3>Logo Animation</h3>
    <p>Dynamic animated logos that enhance brand recognition and identity.</p>
  </div>
</div>


  <!-- Process Section -->
  <div class="process-section">
    <h2 class="process-title">Our Video Editing Process</h2>
    <div class="process-steps">
      <div class="process-step">
        <img src="/images/Understanding.gif" alt="Understanding Goals">
        <h3>Understanding Goals</h3>
        <p>Aligning the vision and collecting assets for the project.</p>
      </div>
      <div class="process-step">
        <img src="/images/Apply.gif" alt="Editing & Refinement">
        <h3>Editing & Refinement</h3>
        <p>Cutting clips, applying effects, and enhancing visuals.</p>
      </div>
      <div class="process-step">
        <img src="/images/Review.gif" alt="Final Export">
        <h3>Final Export</h3>
        <p>Delivering high-quality, ready-to-use video content.</p>
      </div>
    </div>
  </div>

  <!-- Video Gallery -->
<div class="container-fluid video-gallery">
  <h2 class="text-center gallery-title">Video Showcase</h2>

  <div class="video-container">
    <!-- Main Video Player -->
    <div class="main-video-container">
      <video id="main-video" class="main-video" controls controlsList="nodownload">
        <source src="https://dl.dropboxusercontent.com/scl/fi/up7e1vc8g5ndp1h5wowoz/Final_Output_TKFXM_Project1.mp4?rlkey=fa2djfmpkofebbxsj090jxdki&st=xmomnibk" type="video/mp4">
        Your browser does not support the video tag.
      </video>
      <p id="video-title">01. Short-Form Video</p>
    </div>

    <!-- Video Playlist -->
    <div class="video-playlist">
      <% let videos = [
        { src: "https://dl.dropboxusercontent.com/scl/fi/up7e1vc8g5ndp1h5wowoz/Final_Output_TKFXM_Project1.mp4?rlkey=fa2djfmpkofebbxsj090jxdki&st=xmomnibk", title: "01. Short-Form Video" },
        { src: "https://dl.dropboxusercontent.com/scl/fi/8y1tz61llq45vz9q3ww1n/FinalOutput_1.mp4?rlkey=3p0a5p1j4i6wa25m9g9eunsvy&st=1ugdqerr", title: "02. Short-Form Video" },
        { src: "https://dl.dropboxusercontent.com/scl/fi/b39kkdotjuqcrzswly1v8/Pocast_3D_Reels.mp4?rlkey=0qpjljy8jq5mdvedjnkdworox&st=2i07fedy", title: "03. Podcast 3D Reel" },
        { src: "https://dl.dropboxusercontent.com/scl/fi/lma0nmgsy4iemfhk9nwzj/BetMax_FinalOutput.mp4?rlkey=7ksmu19072a9s32usbmhsk8h0&st=pbx756fz", title: "04. Promo Video" },
        { src: "https://dl.dropboxusercontent.com/scl/fi/cefexqcgvjtyblybukklg/Dimo_Project_Reels_Final.mp4?rlkey=jp8mbl3kdfomzy0gnbe36lmpa&st=df5oowuv", title: "05. Promo Video" },
        { src: "https://dl.dropboxusercontent.com/scl/fi/1p2nsz1ekoas019olwc3p/FinalOutput_Alex2.mp4?rlkey=ilhwu4g5kd0h312yj3z9ypl7t&st=xbo95220", title: "06. Short-Form Video" },
        { src: "https://dl.dropboxusercontent.com/scl/fi/frsf655w9esxu69j723sv/K2x_4_FinalOutput.mp4?rlkey=f7sxylbkt8cggeo9z0f3dactb&st=tjejwxbb", title: "07. Short-Form Video" },
        { src: "https://dl.dropboxusercontent.com/scl/fi/abs7meqads00jfpwgwgc6/k2x0_1.mp4?rlkey=llbov4u4f16fzt4s8qvee287q&st=sahtebu8", title: "08. Short-Form Video" },
        { src: "https://dl.dropboxusercontent.com/scl/fi/bkpgjftiql5wyaz1509sr/tdwii_final_output.mp4?rlkey=ew3zg3iklax7eq61iuynwm2od&st=175jacr6", title: "09. Short-Form Video" },
      ]; %>

      <% videos.forEach((video, index) => { %>
        <div class="video-item" data-video="<%= video.src %>" data-title="<%= video.title %>">
          <video class="thumbnail" muted>
            <source src="<%= video.src %>" type="video/mp4">
          </video>
          <p><%= video.title %></p>
        </div>
      <% }); %>
    </div>
  </div>
</div>


  <!-- Call to Action -->
  <div class="cta-section">
    <h2>Let's Elevate Your Video Content</h2>
    <p>Work with our experts for professional video editing.</p>
    <a href="/quotation" class="cta-button">Book Now</a>
  </div>
</div>

<script src="/javascript/newvideoediting.js"></script>




