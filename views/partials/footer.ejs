<script>
   document.addEventListener("mousemove", (e) => {
    const text = document.querySelector(".footer-bg-text");
    const rect = text.getBoundingClientRect();
    const x = e.clientX - rect.left; // Cursor X relative to the text
    const y = e.clientY - rect.top;  // Cursor Y relative to the text
    text.style.backgroundPosition = `${x}px ${y}px`; // Move the light to the cursor's position
  });
  </script>