<% layout('/layouts/boilerplate') -%>
<link rel="stylesheet" href="/stylesheet/blog.css">

<div class="container my-5 bg-white p-5 rounded shadow">
    <div class="position-relative mb-4">
      <img src="<%= blog.image %>" class="img-fluid w-100 rounded" style="height: 40vh; object-fit: cover;" alt="<%= blog.title %>">
      <div class="position-absolute top-50 start-50 translate-middle text-center text-white">
        <h1 class="display-4 fw-bold"><%= blog.title %></h1>
      </div>
    </div>
    
    <div class="content mt-5 px-5">
      <p class="lead"><%- blog.content %></p>
    </div>
<a href="/blogs" class="text-center">EXPLORE MORE BLOGS</a>
    <div class="mt-3">
      <a href="/blogs/<%= blog.slug %>/edit" class="btn btn-warning">Edit</a>
      <form action="/blogs/<%= blog.slug %>?_method=DELETE" method="POST" style="display:inline;">
        <button type="submit" class="btn btn-danger">Delete</button>
      </form>
    </div>
</div>
