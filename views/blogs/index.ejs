<% layout('/layouts/boilerplate') -%>
<link rel="stylesheet" href="/stylesheet/blogs.css">

<section class="py-3 py-md-5">
  <div class="container">
    <div class="row justify-content-center header">
      <div class="col-12 text-center mb-5">
        <h1 class="text-white text-uppercase title"><span class="our">Our</span>Blogs</h1>
        <h5 class=" mx-auto text-white text-center w-50">Here’s our latest blog updates, featuring fresh content published regularly.</h5>
        <hr class="w-50 mx-auto border-dark-subtle">
      </div>
    </div>

    <div class="row gy-4 justify-content-center">
      <% blogs.forEach(blog => { %>
        <% if(blog.status === "published"){ %>
        <div class="col-12 col-md-6 col-lg-4 d-flex justify-content-center">
          <article class="blog-card">
            <div class="blog-card-img">
              <a href="/blogs/<%= blog.slug %>">
                <img class="img-fluid" src="<%= blog.image || '/default-thumbnail.jpg' %>" alt="<%= blog.title %>">
                <div class="hover-overlay">
                  <span class="hover-icon">👁</span>
                  <span class="hover-text">Read More</span>
                </div>
              </a>
            </div>
            <div class="blog-card-body">
              <% if (blog.tags.length > 0) { %>
                <span class="text-primary"><%= blog.tags[0] %></span> 
              <% } %>
              <h3 class="blog-card-title"><a href="/blogs/<%= blog.slug %>"><%= blog.title %></a></h3>
              <p class="blog-card-text"><%= blog.metaDescription %></p>
            </div>
            <div class="blog-card-footer">
              <span class="blog-card-date">📅 <%= blog.createdAt.toDateString() %></span>
              <span class="blog-card-views">👁 <%= blog.views %></span>
              <span class="blog-card-reading-time">⏳ <%= blog.readingTime %> min read</span>
            </div>
          </article>
        </div>
        <% } %>
      <% }) %>
    </div>
   
  </div>
</section>
