<h1>All Blogs</h1>
<div class="container">
    <a href="/blogs/new">Create</a>
    <% blogs.forEach(blog => { %>
        <div class="card">
            <img src="<%= blog.image || 'https://via.placeholder.com/150' %>" class="card-img-top" alt="<%= blog.title %>">
            <div class="card-body">
                <h5 class="card-title"><%= blog.title %></h5>
                <p class="card-text"><%= blog.content.substring(0, 100) %>...</p>
                <a href="/blogs/<%= blog._id %>" class="btn btn-primary">Read More</a>
            </div>
        </div>
    <% }) %>
</div>
